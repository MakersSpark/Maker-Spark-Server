<!doctype html>
<html lang='en'>

	<head>
    	<title>Spark Dashboard</title>
    </head>
      
	
	<body>
	<% if flash[:notice]%>
		<div class="notice">
			<%= flash[:notice] %>
		</div>
	<%end%>

	<% if flash[:errors]%>
		<div class="errors">
			
			<p>You have the following problems with your registration:</p>

			<ul>

			<% flash[:errors].each do |error| %>
			
				<li> <%= error %> </li>

			<%end%>
			</ul>
		</div>
	<%end%>


	<%= yield %>

	</body>


</html>