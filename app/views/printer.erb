<h1>Welcome to SparkPrint</h1>

	<% if flash[:notice]%>
		<div class="notice">
			<%= flash[:notice] %>
		</div>
	<%end%>

	<% if flash[:errors]%>
		<div class="errors">
			
			<p>You have the following problems with your registration:</p>

			<ul>

			<% flash[:errors].each do |error| %>
			
				<li> <%= error %> </li>

			<%end%>
			</ul>
		</div>
	<%end%>
	<% if current_user %>

		<form action="/" method="post">
			<input type="hidden" name="_method" value="delete">
			<button type="submit">Log out</button>
		</form>

		<a href="/edit_user">Edit account</a>
	<%end%>		


<form action="/print" method="post">
	<textarea class="message" name="messagebox" cols="40" rows="4"></textarea>
	<button class="print-hello-world" type="submit">Print</button>
</form>

<form action="/send_message" method="post">
	<span> Receiver:</span>
	<select name="receiver", class="message-receiver">
	<% @users.each do |user| %>
		<option value="<%= user.github_user%>" ><%= user.github_user%></option>
	<%end%>
	</select>
	<textarea class="user-message" name="usermessagebox" cols="40" rows="4"></textarea>
	<button class="send-message" type="submit">Send Message</button>
</form>




<a href='/sign_in'>Sign in</a>
<a href='/sign_up'>Sign up</a>

