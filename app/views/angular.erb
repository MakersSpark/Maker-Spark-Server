<html ng-app="myApp">

  <head>
  	<link rel='stylesheet' href='/css/bootstrap-responsive.css' />
	<link rel='stylesheet' href='/css/bootstrap.css' />
    <script src="./js/angular.js"></script>
    <script src="./js/myApp.js"></script>
  </head>

  <body ng-controller="MyCtrl">
	<div class="col-md-3">    
	    <div class="col-md-12">
	    	<button class="btn" ng-click="loadData()">Load Data From Server</button>
	    	<button class="btn btn-primary" ng-click="addData()">Add</button>
		    <div class="well">
			    <ul>
			         <li ng-repeat="item in items">Email: {{item.email}}<br> age: {{item.age}}<br> Name: {{item.name}}</li>
			    </ul>
		  	</div>
	  	</div>
	  	<div class="col-md-12">
	    	<button class="btn" ng-click="loadGitData()">Load GitHub Data</button>

		    <div class="well">
			    <ul>
			         <li ng-repeat="gitItem in gitItems">Login: {{gitItem.login}}<br> repos {{gitItem.public_repos}}<br>Following: {{gitItem.following}}</li>
			    </ul>
		  	</div>
	  	</div>
	  	<div class="col-md-12">
	    	<button class="btn" ng-click="loadForecast()">Load Forecast</button>
		    <div class="well">
			    <ul>
			         <li ng-repeat="forecast in forecasts">Forecast: {{forecast}}</li>
			    </ul>
		  	</div>
	  	</div>

	  	<div class="col-md-12">
	    	<button class="btn" ng-click="loadCalendar()">Load calander</button>
		    <div class="well">
			    <ul>
			         <li ng-repeat="event in events">{{event.description}}</li>
			    </ul>
		  	</div>
		</div>	 
	  </div>
	  
	  <div class="col-md-6 well">
	  	Hello
		<ul>
	         <li ng-repeat="message in messages">Email: {{message.email}}<br> age: {{message.age}}<br> Name: {{message.name}}</li>
	    </ul>
	  </div>
	  
	  
  </body>

</html>