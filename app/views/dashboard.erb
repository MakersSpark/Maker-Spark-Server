<body class="dashboard_page">

<div class="container-fluid">

 	<div class='spark col-md-offset-1 col-md-3 hard_height'>
		<h3>Select what to print</h3>
		<form action="/users/update" method="post">
		
		<ul class="all_options">

		<li>
		  <input type="checkbox" id="Calendar" name="calendar" <%= "checked" if @user.preferences.calendar%> >
			<label for="Calendar"><i class="fa fa-calendar fa-2x"></i><span> Makers Calendar</span></label>
		</li>

		<li>	
			<input type="checkbox" id="Forecast" name="forecast"<%= "checked" if @user.preferences.forecast%>>
			<label for="Forecast"><i class="fa fa-cloud fa-2x"></i> <span>Forecast</span></label>  
    	</li>
		<li>	
			<input type="checkbox" id="GithubData" name="github_data"<%= "checked" if @user.preferences.github_data%>>
			<label for="GithubData"><i class="fa fa-github fa-2x"></i> <span>GitHub stats</span></label>
    </li>
		<li>	
			<input type="checkbox" id="TubeStatus" name="tube_status"<%= "checked" if @user.preferences.tube_status%>>
			<label for="TubeStatus"><i class="fa fa-bus fa-2x"></i> <span> Tube status</span></label>
    </li>
		<li>	
			<input type="checkbox" id="TwitterData" name="twitter_data"<%= "checked" if @user.preferences.twitter_data%>>
			<label for="TwitterData"><i class="fa fa-twitter fa-2x"></i> <span>Trending on Twitter</span></label>

    </li>	
    <li id="SearchTerm">
    	<input type="text" name="twitter_search_term" placeholder="Search Term">
    </li>
		<li>	
			<input type="checkbox" id="GuardianNews"  name="guardian_news"<%= "checked" if @user.preferences.guardian_news%>>
			<label for="GuardianNews"><i class="fa fa-newspaper-o fa-2x"></i> <span>Latest headlines</span></label>
    </li>	
		</ul>

			<button type="submit" name="checkbox_btn" class="btn btn-sm btn-info">Submit</button>
			
		</form>

	</div>


	<div class="spark col-md-offset-1 col-md-6 col-md-offset-1 hard_height">

